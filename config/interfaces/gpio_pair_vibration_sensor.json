{
  "relative_filename": "config/interfaces/gpio_pair_vibration_sensor.json",
  "version": "1.0.0",
  "author": "config/author.json",
  "interface_id": "GPIO_PAIR_VIBRATION_SENSOR",
  "display_name": "GPIO Pair - HW-500 Vibration Sensor",
  "description": "GPIO pin pair configured for HW-500 vibration sensor digital and analog outputs",
  "created": "2025-10-23",
  
  "interface_type": "GPIO_PAIR_DIGITAL_ANALOG",
  "hardware_platform": "ESP32_S3",
  
  "pin_assignments": {
    "digital_pin": {
      "gpio_number": 27,
      "pin_name": "GPIO27",
      "physical_pin": 12,
      "signal_type": "digital_input",
      "function": "vibration_detection_interrupt",
      "pull_mode": "pullup_internal"
    },
    "analog_pin": {
      "gpio_number": 26,
      "pin_name": "GPIO26_ADC2_CH9", 
      "physical_pin": 11,
      "signal_type": "analog_input",
      "function": "vibration_level_measurement",
      "adc_channel": "ADC2_CHANNEL_9"
    }
  },
  
  "electrical_specs": {
    "voltage_level": "3.3V",
    "digital_current": "40mA",
    "analog_impedance": "high_z",
    "adc_resolution": "12_bit"
  },
  
  "protocol_config": {
    "digital_protocol": "interrupt_driven",
    "analog_protocol": "adc_polling",
    "interrupt_trigger": "falling_edge",
    "debounce_required": true
  },
  
  "conflict_detection": {
    "shared_with": [],
    "conflicts_with": [
      "WIFI_RF_CIRCUITS",
      "ADC2_DURING_WIFI"
    ],
    "usage_priority": "vibration_sensing"
  }
}
