{
    "relative_filename": "config/bots/bot_families/goblins/simple_goblin_bot.json",
    "version": "1.0.0",
    "author": "config/author.json",
    "bot_type": "SIMPLE_GOBLIN",
    "bot_name": "Simple Goblin Bot",
    "description": "Basic goblin animatronic using simple component implementations for immediate testing",
    "coordinate_system": "skull_3d",
    "reference_point": "nose_center",
    "units": "INCH",
    "default_mood": "CONTENTMENT",
    "mood_system": {
        "enabled": true,
        "states": [
            "FEAR",
            "ANGER",
            "IRRITATION",
            "HAPPINESS",
            "CONTENTMENT",
            "HUNGER",
            "CURIOSITY",
            "AFFECTION"
        ],
        "default_transitions": {
            "CURIOSITY": [
                "HAPPINESS",
                "CONTENTMENT"
            ],
            "HAPPINESS": [
                "CONTENTMENT",
                "AFFECTION"
            ],
            "CONTENTMENT": [
                "CURIOSITY",
                "HAPPINESS"
            ],
            "IRRITATION": [
                "ANGER",
                "CONTENTMENT"
            ]
        }
    },
    "components": [
        "left_eye_display",
        "right_eye_display",
        "mouth_display",
        "nose_sensor",
        "main_speaker",
        "goblin_head",
        "goblin_torso"
    ],
    "behaviors": [
        {
            "behavior_id": "distance_reaction",
            "trigger": "sensor_reading",
            "component_function": "simple_goblin_react_to_distance",
            "frequency_ms": 200,
            "enabled": true
        },
        {
            "behavior_id": "random_mischief",
            "trigger": "timer",
            "component_function": "simple_goblin_random_behavior",
            "frequency_ms": 3000,
            "enabled": true
        }
    ],
    "initialization_sequence": [
        "simple_display_init",
        "simple_audio_init",
        "simple_sensor_init",
        "simple_mood_init",
        "simple_goblin_init"
    ],
    "startup_greeting": {
        "eyes": "bright_happy",
        "mouth": "big_smile",
        "sound": "goblin_hello",
        "mood": "HAPPINESS"
    },
    "name": "simple_goblin_bot",
    "type": "UNKNOWN",
    "timing": {
        "hitCount": 1
    }
}