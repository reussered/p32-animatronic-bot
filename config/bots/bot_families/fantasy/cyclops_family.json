      "size_scale": 1.8,
      "color_scheme": "stone_gray",
      "personality_modifiers": {
        "ANGER": "-10",
        "CONTENTMENT": "+10"
      }
    },
    "forge_cyclops": {
      "color_scheme": "soot_blackened",
      "personality_modifiers": {
        "CURIOSITY": "+10",
        "ANGER": "+5"
      }
    },
    "sea_cyclops": {
      "color_scheme": "algae_green",
      "personality_modifiers": {
        "FEAR": "+10",
        "HUNGER": "+10"
      }
    }
  }
