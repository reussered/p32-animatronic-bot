// SSD1331 Micro RGB OLED - RGB565 (16-bit) pixel format
// Forward declaration to resolve circular dependency
struct SSD1331_Pixel;
extern SSD1331_Pixel SSD1331_InitialPixel;

struct SSD1331_Pixel {
    unsigned int red : 5;    // 5 bits for red
    unsigned int green : 6;  // 6 bits for green
    unsigned int blue : 5;   // 5 bits for blue

    // Maximum values for each color channel (for mood calculations)
    static constexpr unsigned int maxRed = 0x1F;    // 5 bits = 31
    static constexpr unsigned int maxGreen = 0x3F;  // 6 bits = 63
    static constexpr unsigned int maxBlue = 0x1F;   // 5 bits = 31
    
    // Default constructor initializes to InitialPixel
    SSD1331_Pixel() { *this = SSD1331_InitialPixel; }
    
    // Copy constructor
    SSD1331_Pixel(const SSD1331_Pixel& other) {
        red = other.red;
        green = other.green;
        blue = other.blue;
    }
    
    // Assignment operator
    SSD1331_Pixel& operator=(const SSD1331_Pixel& other) {
        red = other.red;
        green = other.green;
        blue = other.blue;
        return *this;
    }

    // Add two pixels with saturation (overflow caps at max value per channel)
    SSD1331_Pixel operator+(const SSD1331_Pixel& other) const
    {
        SSD1331_Pixel result;
        
        // Add red channel
        unsigned int sum_r = red + other.red;
        result.red = (sum_r > maxRed) ? maxRed : sum_r;
        
        // Add green channel
        unsigned int sum_g = green + other.green;
        result.green = (sum_g > maxGreen) ? maxGreen : sum_g;
        
        // Add blue channel
        unsigned int sum_b = blue + other.blue;
        result.blue = (sum_b > maxBlue) ? maxBlue : sum_b;
        
        return result;
    }

    // Add-assign operator with saturation
    SSD1331_Pixel& operator+=(const SSD1331_Pixel& other)
    {
        // Add red channel
        unsigned int sum_r = red + other.red;
        red = (sum_r > maxRed) ? maxRed : sum_r;
        
        // Add green channel
        unsigned int sum_g = green + other.green;
        green = (sum_g > maxGreen) ? maxGreen : sum_g;
        
        // Add blue channel
        unsigned int sum_b = blue + other.blue;
        blue = (sum_b > maxBlue) ? maxBlue : sum_b;
        
        return *this;
    }
};
