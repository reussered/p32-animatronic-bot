// ILI9486 Display Header
// RGB666 (18-bit color)

#ifndef ILI9486_HDR
#define ILI9486_HDR

#include <cstdint>

// Forward declaration
struct ILI9486_Pixel;

// Global InitialPixel - must be set before allocating buffers containing Pixels
extern ILI9486_Pixel ILI9486_InitialPixel;

/**
 * @brief Pixel struct for ILI9486 display (RGB666 format)
 * 18-bit color: 6 bits per channel
 */
struct ILI9486_Pixel
{
    unsigned int red : 6;
    unsigned int green : 6;
    unsigned int blue : 6;
    unsigned int : 6;  // Padding to align to 24 bits
    
    ILI9486_Pixel() 
    {
        *this = ILI9486_InitialPixel;
    }
    
    // Copy constructor
    ILI9486_Pixel(const ILI9486_Pixel& other) 
        : red(other.red), green(other.green), blue(other.blue)
    {}
    
    // Assignment operator
    ILI9486_Pixel& operator=(const ILI9486_Pixel& other)
    {
        red = other.red;
        green = other.green;
        blue = other.blue;
        return *this;
    }
};

// Display specifications
size_t ili9486_get_width(void);
size_t ili9486_get_height(void);
size_t getFrameSize(void);
size_t getFrameRowSize(void);
size_t getDisplaySize(void);

// Component functions
esp_err_t ili9486_init(void);
void ili9486_act(void);

#endif // ILI9486_HDR
