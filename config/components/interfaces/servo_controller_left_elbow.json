                          },
    "shared_resources":  {
                             "i2c_bus":  {
                                             "sda_pin":  "GPIO_21",
                                             "scl_pin":  "GPIO_22",
                                             "frequency":  "400_KHZ",
                                             "shared_by":  [
                                                               "elbow_flex_extend_encoder"
                                                           ]
                                         }
                         },
    "safety_configuration":  {
                                 "emergency_stop_pin":  "GPIO_0",
                                 "overload_detection":  "CURRENT_SENSING_ADC_CHANNEL_2",
                                 "collision_detection":  "TORQUE_SPIKE_MONITORING"
                             }
}
