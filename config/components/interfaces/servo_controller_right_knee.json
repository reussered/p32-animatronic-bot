{
    "relative_filename":  "config/components/interfaces/servo_controller_right_knee.json",
    "version":  "1.0.0",
    "author":  "config/author.json",
    "interface_id":  "SERVO_CONTROLLER_RIGHT_KNEE",
    "interface_type":  "SINGLE_SERVO_CONTROLLER",
