                                                       "direction_pin":  "GPIO_26",
                                                       "enable_pin":  "GPIO_27",
                                                       "encoder_sda":  "GPIO_21",
                                                       "encoder_scl":  "GPIO_22"
                                                   }
                          },
    "shared_resources":  {
                             "i2c_bus":  {
                                             "sda_pin":  "GPIO_21",
                                             "scl_pin":  "GPIO_22",
                                             "frequency":  "400_KHZ",
                                             "shared_by":  [
                                                               "knee_flex_extend_encoder"
                                                           ]
                                         }
                         },
    "safety_configuration":  {
                                 "emergency_stop_pin":  "GPIO_0",
                                 "hyperextension_protection":  "ACTIVE_SERVO_LIMITING",
                                 "impact_detection":  "ACCELEROMETER_BASED_SHOCK_MONITORING"
                             }
}
