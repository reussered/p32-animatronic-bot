{
    "relative_filename":  "config/components/system/telemetry_hub.json",
    "version":  "3.0.0",
    "author":  "config/author.json",
    "name":  "telemetry_hub",
    "component_type":  "SYSTEM_LEVEL",
    "description":  "Central telemetry aggregation and publishing hub - collects data from all subsystems",
    "created":  "2025-10-15",
    "timing":  {
                   "hitCount":  75,
                   "description":  "Telemetry publish cycle every 7.5 seconds"
               },
    "system_requirements":  {
                                "min_controller":  "ESP32_S3",
                                "required_features":  [
                                                          "WIFI_STA",
                                                          "ESP_NOW"
                                                      ],
                                "memory_footprint_kb":  "96",
                                "cpu_usage_percent":  "3-8"
                            },
    "mqtt_configuration":  {
                               "broker":  "CONFIGURED_AT_RUNTIME",
                               "port":  1883,
                               "client_id":  "goblin_torso_master",
                               "qos":  1,
                               "retain":  false,
                               "keepalive_s":  60,
                               "auto_reconnect":  true
                           },
    "telemetry_sources":  {
                              "subsystem_health":  [
                                                       "HEAD_NODE",
                                                       "ARM_LEFT_NODE",
                                                       "ARM_RIGHT_NODE",
                                                       "LEG_LEFT_NODE",
                                                       "LEG_RIGHT_NODE"
                                                   ],
                              "sensor_data":  [
                                                  "distance_sensors",
                                                  "touch_sensors",
                                                  "temperature_sensors",
                                                  "voltage_monitors"
                                              ],
                              "system_metrics":  [
                                                     "cpu_usage",
                                                     "memory_usage",
                                                     "wifi_signal_strength",
                                                     "mesh_node_count",
                                                     "uptime"
                                                 ]
                          },
    "publish_topics":  {
                           "system_status":  "goblin/system/status",
                           "subsystem_health":  "goblin/subsystems/health",
                           "sensor_readings":  "goblin/sensors/data",
                           "performance_metrics":  "goblin/performance/metrics",
                           "error_reports":  "goblin/errors/log"
                       },
    "subscribe_topics":  {
                             "commands":  "goblin/commands/input",
                             "configuration":  "goblin/config/update",
                             "firmware_ota":  "goblin/firmware/update"
                         },
    "responsibilities":  [
                             "Aggregate data from all mesh nodes",
                             "Format telemetry into JSON payloads",
                             "Publish to MQTT broker periodically",
                             "Subscribe to command topics",
                             "Route remote commands to subsystems",
                             "Log system events and errors",
                             "Support OTA firmware updates",
                             "Provide REST API for local control"
                         ]
}
