{
  "relative_filename": "config/components/system/testpicker.json",
  "version": "1.0.0",
  "author": "config/author.json",
  
  "component_name": "testpicker",
  "component_type": "SYSTEM_LEVEL",
  "description": "Test case picker - populates SystemTest global variable with comprehensive test cases for GC9A01 displays and system validation",
  "created": "2025-10-18",
  
  "timing": {
    "hitCount": 240000,
    "description": "Test picker status check every 2 seconds"
  },
  
  "system_requirements": {
    "min_controller": "ESP32",
    "required_features": ["BASIC_IO"],
    "memory_footprint_kb": "4",
    "cpu_usage_percent": "0.1"
  },
  
  "testing_capabilities": {
    "test_case_registration": true,
    "system_test_population": true,
    "gc9a01_test_management": true,
    "test_status_monitoring": true
  },
  
  "responsibilities": [
    "Read SystemTest from GSM g_Test variable",
    "Add GC9A01 display test cases to SystemTest",
    "Write updated SystemTest back to GSM g_Test",
    "Manage test execution queue via GSM",
    "Monitor test completion status"
  ],
  
  "test_cases_to_add": [
    "DisplayTest_1",
    "DisplayTest_2", 
    "DisplayTest_3",
    "GC9A01_Clear_Screen",
    "GC9A01_Color_Fill_Red",
    "GC9A01_Color_Fill_Green", 
    "GC9A01_Color_Fill_Blue",
    "GC9A01_Pixel_Draw",
    "GC9A01_Text_Render",
    "GC9A01_SPI_Test"
  ],
  
  "integration_points": {
    "gsm_variables": ["g_Test"],
    "gsm_operations": ["gsm.read()", "gsm.write()"],
    "test_framework": "SystemTest via GSM",
    "coordination": "GC9A01 display driver"
  },
  
  "gsm_operations": {
    "read_operation": "gsm.read('g_Test', &test)",
    "write_operation": "gsm.write('g_Test', &test)",
    "test_management": "test.addTest(test_name)",
    "variable_name": "g_Test"
  },
  
  "initialization_priority": "high",
  "scope": "system_global",
  "mandatory": false
}