#ifndef WATCHDOG_HDR
#define WATCHDOG_HDR

#include <esp_err.h>
#include <stdint.h>

#ifdef __cplusplus
extern "C" {
#endif

/**
 * @brief Initialize watchdog component
 * @return ESP_OK on success, error code otherwise
 */
esp_err_t watchdog_init(void);

/**
 * @brief Execute watchdog component action
 * Called periodically by subsystem dispatcher
 */
void watchdog_act(void);

#ifdef __cplusplus
}
#endif

#endif // WATCHDOG_HDR
