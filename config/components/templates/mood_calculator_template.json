                          "rgb666":  "MoodCalcRGB666 mood_calc;",
                          "rgb888":  "MoodCalcRGB888 mood_calc;"
                      },
    "usage":  {
                  "initialization":  "mood_calc.initializeDefaultMoodPalette();",
