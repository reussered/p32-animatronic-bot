{
    "name": "spi_bus",
    "type": "bus",
    "version": "1.0.0",
    "author": "config/authors/ai_agent.json",
    "name": "spi_bus",
    "description": "SPI bus component containing SPI display driver for high-speed serial communication",
    "created": "2025-10-29",
    "component_type": "bus_interface",

    "capabilities": {
        "bus_type": "SPI",
        "speed": "up to 80MHz",
        "modes": ["Mode 0", "Mode 1", "Mode 2", "Mode 3"],
        "data_width": ["8-bit", "16-bit"],
        "full_duplex": true,
        "applications": ["displays", "SD cards", "sensors", "flash memory", "communication modules"]
    },

    "components": [
        "config/components/drivers/generic_spi_display.json"
    ],

    "software": {
        "init_function": "spi_bus_init",
        "act_function": "spi_bus_act",
        "api_functions": [
            "spi_bus_master_init(spi_host_device_t host, spi_bus_config_t* bus_config)",
            "spi_bus_add_device(spi_host_device_t host, spi_device_interface_config_t* dev_config)",
            "spi_bus_transmit(spi_device_handle_t handle, spi_transaction_t* trans)",
            "spi_bus_polling_transmit(spi_device_handle_t handle, spi_transaction_t* trans)",
            "spi_bus_remove_device(spi_device_handle_t handle)",
            "spi_bus_free(spi_host_device_t host)"
        ]
    },

    "compatibility": {
        "esp32_s3": true,
        "esp32_s2": true,
        "esp32": true,
        "chip_variants": ["ESP32-S3-DevKitC-1", "ESP32-S3-WROOM-1", "ESP32-DevKitC"]
    }
}
