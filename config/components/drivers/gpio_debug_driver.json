{
    "relative_filename": "config/components/drivers/gpio_debug_driver.json",
    "version": "1.0.0",
    "author": "config/author.json",
    "name": "gpio_debug_driver",
    "hardware_type": "DEBUG_DRIVER",
    "interface_type": "GPIO_DEBUG",
    "description": "Debug GPIO driver that simulates pin states for ultrasonic sensor testing without physical hardware",
    "debug_capabilities": {
        "pin_state_simulation": true,
        "timing_simulation": true,
        "configurable_responses": true,
        "serial_control": true
    },
    "gpio_simulation": {
        "trigger_pin_simulation": "Simulates 10us trigger pulse output",
        "echo_pin_simulation": "Simulates echo pulse input with configurable timing",
        "realistic_timing": true,
        "distance_to_timing_conversion": "echo_duration_us = distance_cm * 58.2"
    },
    "serial_commands": {
        "set_distance": "DIST:cm (e.g., DIST:25)",
        "get_status": "STAT",
        "reset": "RESET"
    },
    "timing": {
        "hitCount": 1,
        "description": "Real-time GPIO simulation"
    },
    "use_fields": {
        "simulated_distance_cm": 30,
        "echo_delay_us": 1746,
        "debug_mode": true
    }
}