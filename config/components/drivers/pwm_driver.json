{
    "relative_filename": "config/components/drivers/pwm_driver.json",
    "version": "1.0.0",
    "author": "config/author.json",
    "name": "pwm_driver",
    "hardware_type": "BUS_DRIVER",
    "interface_type": "PWM",
    "description": "Generic PWM driver for ESP32 supporting multiple channels with configurable frequency and duty cycle",
    "created": "2025-10-29",
    "driver_capabilities": {
        "max_channels": 16,
        "frequency_range": "1Hz-40MHz",
        "resolution_bits": 16,
        "duty_cycle_precision": "0.006%",
        "supported_modes": [
            "LEDC_FADE",
            "LEDC_FIXED_DUTY",
            "SERVO_CONTROL",
            "MOTOR_CONTROL"
        ]
    },
    "electrical_specs": {
        "output_voltage": "3.3V",
        "max_current_per_channel": "40mA",
        "short_circuit_protection": false,
        "overcurrent_protection": false
    },
    "gpio_requirements": {
        "channels_supported": 16,
        "pin_assignment": "CONFIGURABLE_AT_RUNTIME",
        "pin_constraints": "ESP32_LEDC_CAPABLE_PINS"
    },
    "software": {
        "init_function": "pwm_driver_init",
        "act_function": "pwm_driver_act",
        "api_functions": [
            "pwm_set_frequency(channel, frequency)",
            "pwm_set_duty(channel, duty_cycle)",
            "pwm_fade(channel, target_duty, fade_time_ms)",
            "pwm_stop(channel)",
            "pwm_get_duty(channel)"
        ]
    },
    "configuration_options": {
        "default_frequency": "1000Hz",
        "default_resolution": "12_BIT",
        "fade_enabled": true,
        "interrupt_driven": true
    },
    "use_cases": [
        "servo_motor_control",
        "led_brightness_control",
        "motor_speed_control",
        "buzzer_tone_generation",
        "analog_signal_simulation"
    ],
    "compatibility": {
        "esp32_s3": "FULL",
        "esp32_c3": "LIMITED_6_CHANNELS",
        "esp32": "FULL"
    },
    "prototype_status": "ready_for_implementation",
    "tested": false,
    "type": "GENERIC_DRIVER"
}