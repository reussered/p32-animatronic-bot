{
    "relative_filename": "config/components/drivers/driver/dynamic_gpio_driver.json",
    "version": "1.0.0",
    "author": "config/author.json",
    "name": "dynamic_gpio_driver",
    "hardware_type": "BUS_DRIVER",
    "interface_type": "GPIO_SINGLE",
    "description": "Dynamic GPIO driver that assigns pins at runtime using the assigned_pins array",
    "created": "2025-10-29",
    "controller": "esp32_s3_devkit_controller",
    "driver_capabilities": {
        "max_pins": 1,
        "io_modes": [
            "DIGITAL_OUTPUT"
        ],
        "interrupt_types": [],
        "pullup_pulldown": false,
        "debouncing": false,
        "adc_capable": false
    },
    "electrical_specs": {
        "operating_voltage": "3.3V",
        "output_current": "40mA_PER_PIN",
        "input_voltage_range": "0-3.3V"
    },
    "gpio_requirements": {
        "pin_number": "DYNAMICALLY_ASSIGNED_AT_RUNTIME",
        "pin_constraints": "ESP32_GPIO_ASSIGNABLE_PINS",
        "bus_type": "gpio"
    },
    "software": {
        "init_function": "dynamic_gpio_driver_init",
        "act_function": "dynamic_gpio_driver_act",
        "api_functions": [
            "gpio_write_digital(pin, state)"
        ]
    },
    "configuration_options": {
        "default_mode": "DIGITAL_OUTPUT",
        "default_state": "LOW"
    },
    "use_cases": [
        "dynamic_led_control",
        "runtime_pin_assignment_demo"
    ],
    "compatibility": {
        "esp32_s3": "FULL_SUPPORT",
        "esp32_c3": "FULL_SUPPORT"
    },
    "prototype_status": "ready_for_implementation",
    "tested": false,
    "type": "GENERIC_DRIVER"
}