{
    "name": "adc_bus",
    "type": "bus",
    "version": "1.0.0",
    "author": "config/authors/ai_agent.json",
    "component_name": "adc_bus",
    "description": "ADC bus component containing ADC driver for analog signal conversion",
    "created": "2025-10-29",
    "component_type": "bus_interface",

    "capabilities": {
        "bus_type": "ADC",
        "channels": "up to 20",
        "resolution": "12-bit",
        "sample_rate": "up to 2MSPS",
        "voltage_range": "0-3.3V",
        "applications": ["sensors", "potentiometers", "battery monitoring", "audio input"]
    },

    "components": [
        "config/components/drivers/adc_driver.json"
    ],

    "software": {
        "init_function": "adc_bus_init",
        "act_function": "adc_bus_act",
        "api_functions": [
            "adc_bus_init_channel(adc_channel_t channel, adc_atten_t attenuation)",
            "adc_bus_read_raw(adc_channel_t channel)",
            "adc_bus_read_voltage(adc_channel_t channel)",
            "adc_bus_continuous_init(adc_channel_t* channels, uint8_t channel_count)",
            "adc_bus_continuous_read(uint32_t* data, uint32_t length)",
            "adc_bus_calibration_init(void)"
        ]
    },

    "compatibility": {
        "esp32_s3": true,
        "esp32_s2": true,
        "esp32": true,
        "chip_variants": ["ESP32-S3-DevKitC-1", "ESP32-S3-WROOM-1", "ESP32-DevKitC"]
    }
}