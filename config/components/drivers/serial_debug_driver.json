{
    "relative_filename": "config/components/drivers/i2c_debug_driver.json",
    "version": "1.0.0",
    "author": "config/author.json",
    "name": "serial_debug_driver",
    "hardware_type": "DEBUG_DRIVER",
    "interface_type": "SERIAL_AUDIO_DEBUG",
    "description": "Debug driver that intercepts audio streams and redirects them to PC sound system via serial port, integrating with existing pc_audio_capture.py Python tool",
    "created": "2025-11-10",
    "debug_capabilities": {
        "audio_intercept": true,
        "pc_audio_redirect": true,
        "real_time_streaming": true,
        "audio_format_conversion": true,
        "debug_logging": true
    },
    "audio_specs": {
        "supported_formats": [
            "PCM_16BIT",
            "PCM_24BIT",
            "PCM_32BIT"
        ],
        "sample_rates": [
            "8000Hz",
            "16000Hz",
            "22050Hz",
            "44100Hz",
            "48000Hz"
        ],
        "channels": [
            "MONO",
            "STEREO"
        ],
        "bit_depths": [
            "16_BIT",
            "24_BIT",
            "32_BIT"
        ]
    },
    "interface_specs": {
        "transport": "UART_SERIAL_PORT",
        "pc_connection": "PYGAME_AUDIO_OUTPUT",
        "protocol": "BINARY_AUDIO_STREAM",
        "pc_tool": "tools/pc_audio_capture.py",
        "latency": "LOW_LATENCY_MODE",
        "buffer_size": "CONFIGURABLE",
        "debug_output": "SERIAL_AUDIO_STREAM"
    },
    "timing": {
        "hitCount": 1,
        "description": "Real-time audio processing, highest priority"
    },
    "use_fields": {
        "debug_mode": true,
        "pc_audio_enabled": true,
        "sample_rate": 44100,
        "bit_depth": 16,
        "buffer_size": 1024
    },
    "gpio_requirements": {
        "uart_tx_pin": "UART0_TX_DEFAULT",
        "uart_rx_pin": "UART0_RX_DEFAULT", 
        "debug_enable_pin": {
            "function": "DEBUG_MODE_TOGGLE",
            "description": "Pin to enable/disable PC audio redirect mode"
        }
    },
    "power_consumption": {
        "active_mode": "15mA_AT_3.3V",
        "debug_mode": "20mA_AT_3.3V",
        "idle_mode": "2mA_AT_3.3V"
    },
    "development_features": {
        "audio_visualization": "WAVEFORM_AND_SPECTRUM_DISPLAY",
        "audio_recording": "WAV_FILE_EXPORT",
        "real_time_monitoring": "PC_AUDIO_OUTPUT",
        "debug_console": "SERIAL_OUTPUT_WITH_AUDIO_STATS"
    }
}