{
  "relative_filename": "config/subsystems/base/leg_base.json", 
  "version": "1.0.0",
  "author": "config/author.json",
  "subsystem_type": "LEG_CONTROLLER",
  "description": "Universal base template for leg subsystem controllers across all creatures",
  
  "controller_hardware": {
    "processor": "ESP32_C3_MINI",
    "flash_memory": "4MB",
    "ram": "400KB",
    "gpio_pins": 22, 
    "adc_channels": 6,
    "pwm_channels": 6,
    "spi_interfaces": 1,
    "i2c_interfaces": 1
  },
  
  "mesh_configuration": {
    "role": "LOCOMOTION_NODE",
    "protocol": "ESP_NOW",
    "coordination_functions": ["GAIT_COORDINATION", "BALANCE_CONTROL", "COLLISION_AVOIDANCE"]
  },
  
  "standard_components": [
    {
      "component_type": "MESH_NETWORK",
      "function_name": "mesh_network_update",
      "default_hitCount": 5, 
      "role": "locomotion_node",
      "required": true
    },
    {
      "component_type": "GAIT_COORDINATOR", 
      "function_name": "gait_coordinator_update",
      "default_hitCount": 8,
      "role": "walking_coordination",
      "required": true
    },
    {
      "component_type": "BALANCE_CONTROLLER",
      "function_name": "balance_controller_update",
      "default_hitCount": 3,
      "role": "dynamic_stability",
      "required": true
    }
  ],
  
  "servo_specifications": {
    "hip_joint": {
      "servo_type": "MG996R_HIGH_TORQUE",
      "pwm_channel": 0,
      "range_degrees": 90,
      "default_hitCount": 8
    },
    "knee_joint": {
      "servo_type": "MG996R_HIGH_TORQUE", 
      "pwm_channel": 1,
      "range_degrees": 120,
      "default_hitCount": 8
    },
    "ankle_joint": {
      "servo_type": "SG90_MICRO",
      "pwm_channel": 2,
      "range_degrees": 60, 
      "default_hitCount": 10
    }
  }
}