// SPI Bus Component Header
// Dynamic pin assignment for SPI bus communication

#ifndef SPI_BUS_H
#define SPI_BUS_H

#include "esp_err.h"

struct spi_device_pinset_t {
	spi_device_pinset_t()
		: mosi(-1), miso(-1), clk(-1), cs(-1), dc(-1), backlight(-1) {}

	int mosi;
	int miso;
	int clk;
	int cs;
	int dc;
	int backlight;
};

extern spi_device_pinset_t cur_spi_pin;

// Function declarations for dispatch table
esp_err_t spi_bus_init(void);
void spi_bus_act(void);

#endif // SPI_BUS_H